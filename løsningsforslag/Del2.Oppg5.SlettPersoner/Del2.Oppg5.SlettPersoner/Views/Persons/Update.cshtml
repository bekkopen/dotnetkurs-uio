@model Del2.Oppg5.SlettPersoner.Models.Person

<!DOCTYPE html>

<html>
    <head>
        <title>Oppdatere</title>
    </head>
    <body>
        <div>
              @using (Html.BeginForm("Update", "Persons"))
              {
                  <fieldset>
                      <legend>Person</legend>
                      <div>
                          <div class="labelName">@Html.LabelFor(model => model.Name)</div>
                          @Html.EditorFor(model => model.Name)
                          @Html.ValidationMessageFor(model => model.Name)
                      </div>
                      <div>
                          <div class="labelName">@Html.LabelFor(model => model.Age)</div>
                          @Html.EditorFor(model => model.Age)
                          @Html.ValidationMessageFor(model => model.Age)
                      </div>
                      <div>
                          <div class="labelName">@Html.LabelFor(model => model.Gender)</div>
                          @Html.EditorFor(model => model.Gender)
                          @Html.ValidationMessageFor(model => model.Gender)
                      </div>
                      <input type="submit" value="Endre" />            
                  </fieldset>
              }
        </div>
    </body>
</html>